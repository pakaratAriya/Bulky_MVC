@model List<Category>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6"><h2 class="text-primary">Category List</h2></div>
		<div class="col-6 text-end"><a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i>Create new category</a></div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(Category obj in Model.OrderByDescending(u => u.DisplayOrder))
			{
				<tr>
					<td>@obj.Name</td>
					<td>@obj.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary w-50 mx-2">
								<i class="bi bi-pencil-square"></i>Edit</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger w-50 mx-2">
								<i class="bi bi-trash-fill"></i>Delete
							</a>
						</div>
							
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
