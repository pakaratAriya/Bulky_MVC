@model List<Product>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6"><h2 class="text-primary">Product List</h2></div>
		<div class="col-6 text-end"><a class="btn btn-primary" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle"></i>Create new Product</a></div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Product Title
				</th>
				<th>
					ISBN
				</th>
				<th>
					Price
				</th>
				<th>
					Author
				</th>
				<th>
					Category
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (Product obj in Model)
			{
				<tr>
					<td>@obj.Title</td>
					<td>@obj.ISBN</td>
					<td>@obj.ListPrice</td>
					<td>@obj.Author</td>
					<td></td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary w-50 mx-2">
								<i class="bi bi-pencil-square"></i>Edit
							</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger w-50 mx-2">
								<i class="bi bi-trash-fill"></i>Delete
							</a>
						</div>

					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
