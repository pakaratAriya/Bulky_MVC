@page
@model BulkyRazor_Temp.Pages.Categories.DeleteModel


<form method="post">
	<input hidden asp-for="category.Id" />
	<div class="border p-4 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>

		<div class="mb-3 row px-4">
			<label asp-for="category.Name" class="p-0"></label>
			<input asp-for="category.Name" class="form-control" disabled />
		</div>
		<div class="mb-3 row px-4">
			<label asp-for="category.DisplayOrder" class="p-0"></label>
			<input asp-for="category.DisplayOrder" disabled class="form-control" />
		</div>
		<div class="m-0 row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/Categories/Index" class="btn btn-outline-secondary btn-secondary border text-white form-control">Backs</a>
			</div>
		</div>
	</div>
</form>
